- var pageTitle = page.title || config.title || ''

doctype html
html(lang=config.language)
  head
    title= pageTitle
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=0.5")
    
    link(rel='icon' type='image/svg+xml' href='favicon.svg')
    link(rel='apple-touch-icon' href='favicon.png')

    link(rel='stylesheet', href="/css/highlight/xcode.min.css")
    link(rel='stylesheet', href="/css/bootstrap/bootstrap-tooltips.css")

    if is_home() || page.type=='micro-blog'
      link(rel='stylesheet', href="/css/bootstrap/bootstrap.min.css")
      link(rel='stylesheet', href="/css/bootstrap/bootstrap-theme.min.css")
      link(rel='stylesheet', href="/css/home.css")
    else 
      link(rel='stylesheet', href="/css/post.css")
   
    if page.type == 'about'
      link(rel='stylesheet', href='/css/jquery.modal.min.css')

  body
    script.
      if (/mobile/i.test(navigator.userAgent) || /android/i.test(navigator.userAgent)) {
        document.body.classList.add('mobile')
      }
    if is_home() || page.type=='micro-blog'
      nav.navbar.navbar-default(style={opacity:".9"}, role="navigation")
        div.container-fluid
          div.navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-bs")
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(
              href="/",
              title="我亦飘零久",
              data-toggle="tooltip",
              data-placement="right"
              )= config.subtitle
          div.navbar-collapse.collapse#navbar-bs(style={height:"1px"})
            ul.nav.navbar-nav.navbar-right
              each url, label in theme.menu
                li(class=(
                      (url == '/' && is_home()) || (url == '/micro-blog' && page.type=='micro-blog')
                      ? 'active' : ''
                    )
                  )
                  a(href=url, target=theme.header.blank ? "_blank" : "_self")= label
    
    if body
      div!= body
    else
      block content
  
  script(src="/js/highlight.min.js")
  script(src="/js/jquery.min.js")
  script(src="/js/main.js")
  script(src="/js/bootstrap/bootstrap.min.js")

  if page.type=='micro-blog'
    script(src='/js/micro-blog/main.js')
    script(src='/js/marked.min.js')

  if page.type == 'about'
      script(src='/js/jquery.modal.min.js')

  script(async="" src="https://www.googletagmanager.com/gtag/js?id=UA-160006603-1")
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-160006603-1');
    